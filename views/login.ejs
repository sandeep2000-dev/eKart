<div class = "container d-flex align-items-center min-vh-100">
    <div class = "mx-auto w-50 p-5 shadow" style="background-color:#d9ddde;">
        <h1>Login</h1>
        <% if( messages.error) { %>
            <%= messages.error %>
        <% } %>
        <br>
        <form action = '/login' method = 'POST' >
            <div class = "form-group pb-2">
                <label for = "email">Email</label>
                <input type = "email" class = "form-control" placeholder = "Enter emial" name = "email" id = "email" required>
            </div>
            <div class = "form-group pb-3">
                <label for = "password">Password</label>
                <input type = "password" class = "form-control" placeholder = "Enter password" name = "password" id = "password" required>
            </div>
            <button type = "submit" class = "btn btn-primary">Log In</button>
            <br><br>
            <span>Not Registered??? </span><a href = "./register">Register</a>
        </form>
    </div>  
</div>

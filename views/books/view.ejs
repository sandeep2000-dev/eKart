<div class="container">
    <% if( locals.errorMessage != null ) { %>
    <p>errorMessage</p>
    <% } %>
    <div class="row mb-5">
        <div class = "col-sm-4 border d-flex align-items-center">
            <img src="<%= book.ImagePath%>" class="img-fluid"/>
        </div>
        <div class="col-sm-6 border">
            <div>
                <h1 class="text-center">Book Details</h1>
            </div>
            <div class="details">
                <p><span>Title:</span> <%= book.title %><p>
                <p><span>Author Name:</span> <%= book.author %> <p>
                <p><span>Condition:</span> <%= book.condition %> </p>
                <p class="text-break"><span>Description:</span> <%= book.description %> <p>
                <h2>Price: Rs <%= book.price %> <h2>
            </div>
        </div>
        <div class="col-sm-2 d-grid gap-2">
            <% if( added ) { %>
                <a href = "/books/<%=book.booktype%>/<%=book.id%>/addToCart" class = "btn btn-lg btn-primary disabled" aria-disabled="true">Add to Cart</a>
            <% } else { %>
                <a href = "/books/<%=book.booktype%>/<%=book.id%>/addToCart" class = "btn btn-lg btn-primary">Add to Cart</a>
            <% } %>
            <button type="button" class="btn btn-secondary btn-lg">Buy</button>
        </div>
    </div>
    <div class = "border">
        <div class="text-center">
            <h1>Seller details</h1>
        </div>
        <h2>Name: <%= book.seller.name %></h2>
    </div>
    <br><br>
</div>
    <p><%= errorMessage %></p>
    <% } %>
    <form action = "/vehicles/<%=vehicle.type%>/<%=vehicle.id%>/edit?_method=PUT" method="POST">
        <%- include('../partials/vehicleForm.ejs'); %>
        <button type="submit" class = "btn btn-primary">Update</button>
        <a class="btn btn-danger" href="/profile">Cancel</a>
    </form>
    <br><br>
</div>